# --- Compiler ------------------------------
### Intel Fortran
FC = ifort
FFLAGS = -O3

# --- Files --------------------------------

BIN  = romsinst2seq
SRC1 = ncutil.f90
SRC2 = setup.f90 time_module.f90 romsinst2seq.f90

# NetCDF 
INC_NC = -I/sw/sdev/Modules/netcdf/netcdf-4.1.3/include
LIB_NC = -L/sw/sdev/Modules/netcdf/netcdf-4.1.3/lib -lnetcdff -lnetcdf


SRC = $(SRC1) $(SRC2)
OBJ = $(SRC:.f90=.o)

# --- Compilation --------------------------

all: $(BIN)

.SUFFIXES:

.SUFFIXES: .f90 .o

.f90.o:
	$(FC) -c $(FFLAGS) $<

# ncutil.f90 needs NetCDF include
ncutil.o: ncutil.f90
	$(FC) $(FFLAGS) -c $(INC_NC) $<

$(BIN): $(OBJ)
	$(FC) -o $(BIN) $(LDFLAGS) $(OBJ) $(LIB_NC)



# ---- Misc. ----------

clean:
	rm -f $(OBJ) $(BIN)

love:
	@echo "not war"

# --- Module dependencies ---

romsinst2seq.o: ncutil.o setup.o time_module.o
